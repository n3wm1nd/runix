cabal-version:      3.0
-- The cabal-version field refers to the version of the .cabal specification,
-- and can be different from the cabal-install (the tool) version and the
-- Cabal (the library) version you are using. As such, the Cabal (the library)
-- version used must be equal or greater than the version stated in this field.
-- Starting from the specification version 2.2, the cabal-version field must be
-- the first thing in the cabal file.

-- Initial package description 'runix' generated by
-- 'cabal init'. For further documentation, see:
--   http://haskell.org/cabal/users-guide/
--
-- The name of the package.
name:               runix

-- The package version.
-- See the Haskell package versioning policy (PVP) for standards
-- guiding when and how versions should be incremented.
-- https://pvp.haskell.org
-- PVP summary:     +-+------- breaking API changes
--                  | | +----- non-breaking API additions
--                  | | | +--- code changes with no API change
version:            0.1.0.0

-- A short (one-line) description of the package.
-- synopsis:

-- A longer description of the package.
-- description:

-- The license under which the package is released.
license:            Apache-2.0

-- The file containing the license text.
license-file:       LICENSE

-- The package author(s).
author:             .newmind

-- An email address to which users can send suggestions, bug reports, and patches.
maintainer:         git.newmind@newmind.pw

-- A copyright notice.
-- copyright:
category:           runix
build-type:         Simple

-- Extra doc files to be distributed with the package, such as a CHANGELOG or a README.
extra-doc-files:    CHANGELOG.md

-- Extra source files to be distributed with the package, such as examples, or a tutorial module.
-- extra-source-files:

common warnings
    ghc-options: -Wall -Wno-name-shadowing

library
    -- Import common warning flags.
    import:           warnings

    -- Modules exported by the library.
    exposed-modules:  Runix.Runner,
        Runix.Config.Effects,
        Runix.Secret.Effects,
        Runix.Logging.Effects,
        Runix.FileSystem.Effects,
        Runix.Grep.Effects,
        Runix.Bash.Effects,
        Runix.Cmd.Effects,
        Runix.Streaming.Effects,
        Runix.Streaming.SSE,
        Runix.HTTP.Effects,
        Runix.RestAPI.Effects,
        Runix.LLM.Effects,
        Runix.LLM.Interpreter,
        Runix.LLM.ToolInstances,
        Runix.LLM.ToolExecution,
        Runix.LLMTypes,
        Runix.Compiler.Effects,
        Runix.Runners.CLI.Single,
        Runix.Runners.CLI.Multi,
        Runix.Runners.CLI.Chat,
        Runix.Cancellation.Effects


    -- Modules included in this library but not exported.
    other-modules: Runix.Compiler.Compiler, Runix.Compiler.Cabal

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- Other library packages from which modules are imported.
    build-depends:    base, polysemy >=1.9, bytestring, temporary, text,filepath, directory, Cabal, Cabal-syntax, polysemy-plugin, aeson, process, http-conduit, http-client, http-types, conduit, exceptions, autodocodec, autodocodec-schema, universal-llm, Glob, stm, vector, data-default, containers, time

    -- Directories containing source files.
    hs-source-dirs:   src

    -- Base language which the package is written in.
    default-language: Haskell2010

    ghc-options: -fplugin=Polysemy.Plugin

test-suite runix-test
    -- Import common warning flags.
    import:           warnings

    -- Base language which the package is written in.
    default-language: Haskell2010

    -- Modules included in this executable, other than Main.
    other-modules:    Paths_runix
                    , OpenAIStreamingSpec
                    , SSEParserSpec
                    , FileSystemSecuritySpec
                    , DummyFileSystemSpec
    autogen-modules:  Paths_runix

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- The interface type and version of the test suite.
    type:             exitcode-stdio-1.0

    -- Directories containing source files.
    hs-source-dirs:   test

    -- The entrypoint to the test suite.
    main-is:          Main.hs

    -- Test dependencies.
    build-depends:
        base,
        runix,
        text,
        polysemy,
        polysemy-plugin,
        bytestring,
        aeson,
        autodocodec,
        universal-llm,
        hspec,
        process,
        directory,
        conduit,
        http-client-conduit,
        data-default,
        containers,
        filepath,
        Glob
